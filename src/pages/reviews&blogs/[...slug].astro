---
import { getCollection } from "astro:content";
import ReviewLayout from "../../layouts/ReviewLayout.astro";
import client from "../../../tina/__generated__/client";
import AdminReview from "../../../tina/pages/AdminReview";
import { YouTube } from 'astro-embed';
import EmptySpaceS from "../../components/EmptySpaceS.astro";
import EmptySpaceM from "../../components/EmptySpaceM.astro";
import EmptySpaceL from "../../components/EmptySpaceL.astro";

export async function getStaticPaths() {
  const posts = await getCollection("reviews");

  const paths = [];
  
  posts.forEach((post) => {
    // Ensure post.id doesn't have .mdx extension (should be handled by content.config.ts, but double-check)
    const cleanId = post.id.replace(/\.mdx$/, '');
    
    // Use tinaInfo if available, otherwise construct relativePath from cleanId
    let relativePath = post.data.tinaInfo?.relativePath;
    
    if (!relativePath) {
      // Add .mdx back for TinaCMS queries (TinaCMS needs the file extension)
      relativePath = `${cleanId}.mdx`;
    } else {
      // Ensure relativePath doesn't have double .mdx
      if (relativePath.endsWith('.mdx.mdx')) {
        relativePath = relativePath.replace(/\.mdx\.mdx$/, '.mdx');
      }
    }
    
    // Add route without .mdx extension (clean URL only - no redirects)
    paths.push({
      params: { slug: cleanId },
      props: {
        post,
        getTinaProps: async () =>
          client.queries.reviews({
            relativePath: relativePath,
          }),
      },
    });
  });
  
  return paths;
}

const { post, getTinaProps } = Astro.props;

// Ensure post exists
if (!post) {
  return Astro.redirect('/reviews&blogs', 404);
}

const tinaProps = await getTinaProps();
const frontmatter = post.data;

// Render the MDX content directly for production
const { Content } = await post.render();
---

<ReviewLayout frontmatter={frontmatter}>
  <Content components={{ YouTube, EmptySpaceS, EmptySpaceM, EmptySpaceL }} />
</ReviewLayout>
